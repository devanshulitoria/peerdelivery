<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/black">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peer Delivery"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30dp"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By"
        android:id="@+id/textView"
        android:padding="10dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView22"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devanshu Litoria"
        android:fontFamily="sans-serif-thin"
        android:padding="10dp"
        android:textSize="15sp"

        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView" />
    <com.facebook.share.widget.LikeView
        android:id="@+id/likeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView13"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="devanshu.litoria@gmail.com"
        android:textStyle="italic"
        android:fontFamily="sans-serif-thin"
        android:padding="10dp"
        android:autoLink = "email"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:id="@+id/textView14"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/tv_versionNumber"
        android:layout_alignStart="@+id/tv_versionNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:text="1.0 - BETA"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/tv_versionNumber"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/facebook"
        android:id="@+id/bt_fb_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/whatsapp"
        android:id="@+id/bt_whatapp_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/imageView2"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:gravity="fill"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:text="Peer delivery provides a ridiculously easy way to find friends,family members,relatives and others who are travelling and are willing to take your belongings with them"
        android:id="@+id/textView22"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />



    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/share"
        android:id="@+id/button_share_everywhere"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
    </ScrollView>
</RelativeLayout>
