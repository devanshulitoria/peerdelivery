<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="peerdelivers.peerdelivery.Result">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Call Mark"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:id="@+id/bt_call"
            android:layout_weight="1"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Text Mark"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:id="@+id/bt_text" />
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_profilepic"
        android:src="@drawable/team"
        android:layout_margin="5dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Devanshu Litoria"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/iv_profilepic"
        android:layout_toEndOf="@+id/iv_profilepic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Oracle Financial Services"
        android:id="@+id/textView3"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/iv_profilepic"
        android:layout_toEndOf="@+id/iv_profilepic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Acceptance Probablity : 0.25"
        android:id="@+id/textView4"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/iv_profilepic"
        android:layout_toEndOf="@+id/iv_profilepic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangalore to Delhi"
        android:id="@+id/textView5"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_profilepic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="on"
        android:textColor="@android:color/white"
        android:id="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="15th-June-2016"
        android:textColor="@android:color/white"
        android:id="@+id/tv_doj"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_type"
        android:layout_centerHorizontal="true"
        android:src="@drawable/train"
        android:layout_below="@+id/tv_doj"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PNR:AJQPL78"
        android:textColor="@android:color/white"
        android:id="@+id/pnr"
        android:layout_below="@+id/iv_type"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Congrats Devanshu has accepted to carry your item!"
        android:id="@+id/tv_displayMessage"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/pnr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:gravity="center" />


</RelativeLayout>
</ScrollView>