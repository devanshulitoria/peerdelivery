<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="peerdelivers.peerdelivery.PreStart"
    android:background="@android:color/black">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:text="Peer Delivery"
    android:textSize="40sp"
    android:fontFamily="sans-serif-thin"
    android:layout_centerHorizontal="true"
    android:layout_margin="5dp"
    android:id="@+id/textView8" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Of the people"
                android:fontFamily="sans-serif-thin"
                android:textColor="@android:color/holo_green_dark"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By the people"
            android:fontFamily="sans-serif-thin"
            android:textColor="@android:color/holo_green_dark"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For the people"
            android:fontFamily="sans-serif-thin"
            android:textColor="@android:color/holo_green_dark"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Phone number please!"
        android:phoneNumber="true"
        android:fontFamily="sans-serif-thin"
        android:textColorHint="@android:color/holo_green_dark"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_notification"
        android:id="@+id/btnSendSMS"
        android:backgroundTint="@android:color/holo_green_light"
        android:gravity="center"
        android:padding="5dp"
        android:drawSelectorOnTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="162dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1 of 2"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView9"
        android:textColor="@android:color/holo_green_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:src="@drawable/iconsplash"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_code"
        android:gravity="center"
        android:textColorHint="@android:color/holo_green_dark"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/holo_green_dark"
        android:hint="Enter code"
        android:layout_alignTop="@+id/editText"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Code"
        android:id="@+id/bt_code"
        android:drawSelectorOnTop="true"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_notification"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_alignTop="@+id/btnSendSMS"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
