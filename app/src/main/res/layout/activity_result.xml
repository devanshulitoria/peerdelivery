<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="peerdelivers.peerdelivery.Result"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Request"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:id="@+id/bt_accept"
            android:layout_weight="1"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Back"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:layout_weight="1"
            android:id="@+id/bt_back" />
    </LinearLayout>
<ScrollView
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_below="@+id/linearLayout">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:id="@+id/rr_relative_layout"
    >



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_profilepic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView2"

        android:layout_toRightOf="@+id/iv_profilepic"
        android:layout_toEndOf="@+id/iv_profilepic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/iv_profilepic"
        android:layout_toEndOf="@+id/iv_profilepic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/iv_profilepic"
        android:layout_toEndOf="@+id/iv_profilepic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_profilepic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="on"
        android:textColor="@android:color/white"
        android:id="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/tv_doj"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
         />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_type"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_doj"
        />
    <WebView
        android:id="@+id/myWebView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/picture"
        android:layout_gravity="center"
        android:id="@+id/imVPostPicture"
        android:layout_below="@+id/iv_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/request_box"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:hint="Enter a request message. Remember this is the only message that would be visible to this user!"
        android:padding="5dp"
        android:maxLength="200"
        android:layout_below="@+id/imVPostPicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="sans-serif-thin"
        android:text="Click the button below to upload the picture of the item"
        android:id="@+id/textView21"
        android:layout_alignTop="@+id/imVPostPicture"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
    </ScrollView>
    </RelativeLayout>