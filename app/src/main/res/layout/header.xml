<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:id="@+id/rr_profile"
    android:padding="2dp"
    android:layout_margin="5dp"
    android:background="@drawable/roundedcornerheader"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/showman"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devanshu Litoria"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/tv_user_name"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/white"
        android:layout_below="@+id/image_profile"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey there am using PeerDelivery"
        android:textSize="20sp"
        android:textStyle="italic"
        android:id="@+id/profile_status"
        android:layout_below="@+id/tv_user_name"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/holo_green_dark"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Been to 10 places"
        android:textSize="15sp"
        android:id="@+id/tv_place_count"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last travelled on 25th Oct 2016"
        android:textSize="15sp"
        android:id="@+id/tv_last_time"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/facebook"
        android:id="@+id/button_fb"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>