<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="100dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_margin="5dp"
    android:background="@android:color/holo_orange_dark"
    tools:context="peerdelivers.peerdelivery.SearchResult">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@drawable/team"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangalore to New Delhi"
        android:textColor="@android:color/white"
        android:id="@+id/dest_source"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15-Marach-2016"
        android:id="@+id/doj"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/typeImage"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:src="@drawable/airplane"
        android:layout_above="@+id/doj"
        android:layout_alignRight="@+id/doj"
        android:layout_alignEnd="@+id/doj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devanshu Litoria"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:id="@+id/user_name"
        android:layout_below="@+id/dest_source"
        android:layout_alignLeft="@+id/dest_source"
        android:layout_alignStart="@+id/dest_source" />

</RelativeLayout>
